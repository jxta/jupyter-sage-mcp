#!/bin/bash

echo "🔧 Setting up SageMath MCP environment..."

# SageMathカーネルの登録
echo "📚 Installing SageMath kernel..."
sage -python -m sage_setup.jupyter.install --user

# カーネル確認
echo "🔍 Checking available kernels..."
jupyter kernelspec list

# Jupyter設定ディレクトリ作成
echo "⚙️ Creating Jupyter configuration..."
mkdir -p ~/.jupyter

# Jupyter Server設定
cat > ~/.jupyter/jupyter_server_config.py << 'EOF'
c.ServerApp.allow_origin = '*'
c.ServerApp.disable_check_xsrf = True
c.ServerApp.token = 'binder_mcp_token'
c.ServerApp.password = ''
c.ServerApp.open_browser = False
c.ServerApp.port = 8888
c.ServerApp.ip = '0.0.0.0'

# MCP用の設定
c.ServerApp.allow_remote_access = True
c.ServerApp.trust_xheaders = True
EOF

# JupyterLab設定
cat > ~/.jupyter/jupyter_lab_config.py << 'EOF'
c.LabApp.check_for_updates_class = "jupyterlab.NeverCheckForUpdate"
c.ExtensionApp.open_browser = False
EOF

# MCP用のPython環境確認
echo "🐍 Checking Python environment..."
python -c "
import sys
print(f'Python: {sys.version}')

try:
    import sage.all
    print('✅ SageMath available')
except ImportError:
    print('❌ SageMath not available')

try:
    import jupyter_client
    print('✅ Jupyter client available')
except ImportError:
    print('❌ Jupyter client not available')

try:
    import websockets
    print('✅ WebSockets available')
except ImportError:
    print('❌ WebSockets not available')
"

# srcディレクトリをPythonパスに追加
echo "📁 Setting up Python path..."
mkdir -p ~/.ipython/profile_default/startup/
echo "import sys; sys.path.append('/home/jovyan/src')" > ~/.ipython/profile_default/startup/00-setup-path.py

# MCPデモファイルの準備
echo "📝 Preparing demo files..."
mkdir -p /home/jovyan/notebooks
mkdir -p /home/jovyan/src
mkdir -p /home/jovyan/config

echo "✅ SageMath MCP environment setup complete!"
echo "🚀 Ready to start Jupyter with SageMath and MCP support"
