#!/bin/bash

# SageMathカーネルの設定
echo "Setting up SageMath kernel..."

# SageMathカーネルをJupyterに登録
sage -pip install ipykernel
sage -python -m ipykernel install --user --name sagemath --display-name "SageMath"

# Juliaカーネルの設定
echo "Setting up Julia kernel..."
julia -e 'using Pkg; Pkg.add("IJulia")'

echo "Kernel setup complete!"
